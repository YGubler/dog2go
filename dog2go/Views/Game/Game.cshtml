@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>the new game</h1>
<div id="content"></div>
<div id="chatContainer">
    <input type="text" id="message" />
    <input type="button" id="sendmessage" value="Send" />
    <input type="hidden" id="displayname" />
    <ul id="chatBox"></ul>
</div>

@section scripts
{
    <!--Reference the jQuery library. -->
    <!--Reference the SignalR library. -->

<script src="~/Frontend/Library/SignalR/jquery.signalR-2.2.0.min.js"></script>
    <!--Script references. -->
<script src="~/Frontend/Library/Phaser/phaser.min.js"></script>
<script src="~/Frontend/Classes/Services/game.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--Reference the signalR_Chat -->
<script src="~/Frontend/Classes/Services/Chat.js"></script>
}