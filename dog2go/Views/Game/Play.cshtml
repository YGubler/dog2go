@using dog2go.Views.Extensions

@{
    ViewBag.Title = "Play";
}

<div id="gamePageOverlay">
    <div class="pageOverlayContent">
        <span class="loading"><h1>Loading...</h1></span>
        <span class="switchOrientation"><h1>Switch to landscape mode for a better user experience</h1></span>
    </div>
</div>
<div id="gameContainer">
    <div id="gameContent"></div>
    <div id="sideContainer">
        <div id="chatContainer">
            <ul id="chatBox"></ul>
            <div class="input-group">
                <input class="form-control semi-transparent-input" type="text" id="message"/>
                <input type="submit" value="send" class="btn inline semi-transparent-button" id="sendmessage">
                
            </div>
            <input type="hidden" id="displayname" />
        </div>
        <div id="cardContainer">
            <img src="~/Frontend/Images/cards-min/card_1-11-play_190x300komp.png"></img>
            <img src="~/Frontend/Images/cards-min/card_3_190x300komp.png"></img>
            <img src="~/Frontend/Images/cards-min/card_8_190x300komp.png"></img>
            <img src="~/Frontend/Images/cards-min/card_10_190x300komp.png"></img>
            <img src="~/Frontend/Images/cards-min/card_joker_190x300komp.png"></img>
            <img src="~/Frontend/Images/cards-min/card_3_190x300komp.png"></img>
        </div>
    </div>
</div>

@section scripts
{
    @Html.InitPageMainModule("Classes/GameStartupConfig")
}